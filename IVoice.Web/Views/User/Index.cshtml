@using IVoice.Extensions
@using IVoice.Models.Components.Tabs
@using IVoice.Models.Components.Common

@model IVoice.Models.Users.AccountModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/Scripts/views/user/index.js"></script>
    <script src="~/Scripts/views/user/avatar_upload.js"></script>
}
<div class="container fluid-content">
    <div class="row col-md-10 col-md-offset-1" style="margin-top:20px;margin-bottom:20px;">
        <div class="panel with-nav-tabs panel-default">
            @Html.Partial("~/Views/Shared/Components/_CardHeaderTab.cshtml", new CardHeaderTabsModel() { _header = new List<CardHeaderModel>() {
                            new CardHeaderModel(){ _class = "active", _label = "Account Info", _link = "#tabAccount" },
                            new CardHeaderModel(){ _label = "Personal Info", _link = "#tabPersonal" },
                            new CardHeaderModel(){ _label = "Favourites", _link = "#tabFavourite"},
                            new CardHeaderModel(){ _label = "Ad Compound", _link = "#tabAds"}} })
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="tabAccount">
                        @Html.Partial("~/Views/User/_AccountInfo.cshtml", Model._account)
                    </div>
                    <div class="tab-pane fade in" id="tabPersonal">
                        @Html.Partial("~/Views/User/_PersonalInfo.cshtml", Model._personal)
                    </div>
                    <div class="tab-pane fade in" id="tabFavourite">
                        @Html.Partial("~/Views/User/_FavouriteInfo.cshtml", Model._favourite)
                    </div>
                    <div class="tab-pane fade in" id="tabAds">
                        @Html.Partial("~/Views/User/_AdsInfo.cshtml", Model._ad)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>