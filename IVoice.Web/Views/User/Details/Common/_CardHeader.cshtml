@model IVoice.Models.Components.Common.CardHeaderModel

<div class="card-header-title @Model._class">
    <a class="white-link" href="@Model._link" title="@Model._tooltip">
        @if(Model._icon != "")
        {
            <i class="@Model._icon"></i>
        }
        <span>&nbsp;@Model._label</span>
    </a>
    @if(Model._num != "")
    {
        <span class="card-header-num">@Model._num</span>
    }
</div>
