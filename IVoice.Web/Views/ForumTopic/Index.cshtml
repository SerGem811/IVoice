@model IVoice.Models.ForumTopic.Index
@{
    Layout = "~/Views/Shared/_Forum.cshtml";
}

<div class="row overflow-hidden">
    <!-- content -->
    <div class="content content-layout  ">
        <div class="container">
            <div class="panel with-nav-tabs panel-default margin-top-10">
                <div class="panel-heading">
                    <ul class="nav nav-tabs">
                        <li class="pull-left"><a href="@Url.Action("Index", "Forum")"><i class="fa fa-chevron-circle-left"></i>&nbsp;</a></li>
                        <li class="text-white"><h3>@Model.AreaName</h3></li>
                        <li class="pull-right"><a href="@Url.RouteUrl("TopicCreate", new { id = Model.AreaId })"><i class="fa fa-plus-circle"></i>&nbsp;Start new topic</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <table class="table table-dark table-striped table-hover box-default table-area">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th class="col-md-1"></th>
                            <th class="col-md-1"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script>
        var GetTableListURL = '@Url.Action("GetTableList")';
        var areaIdSearch = @Model.AreaId;
    </script>

    <script src="~/Scripts/views/ForumTopicList.js"></script>

}